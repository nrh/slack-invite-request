{{> nav}}

{{#header}}
<div class="jumbotron">
  <div class="container">
    <h2 class="apply-blurb">{{blurb}}</h2>
    <p class="apply-description">{{{description}}}</p>
    <div class="required">* {{required}}</div>
  </div>
</div>
{{/header}}

<div class="container">
  <div class="col-xs-12 col-md-8">
    <form method="post" action="/apply" enctype="multipart/form-data" id="application">
      {{#form}}
        <div class="form-group">
        {{#fullName}}
          {{> field}}
        {{/fullName}}
        </div>
        <div class="form-group">
        {{#email}}
          {{> field}}
        {{/email}}
        </div>
        {{#custom}}
        <div class="form-group">
          {{> field}}
        </div>
        {{/custom}}
      {{/form}}

      <button type="submit" class="btn btn-primary">Submit</button>
      <div class="disclaimer">
      {{{disclaimer}}}
      </div>
    </form>
  </div>
</div>

{{> scripts}}
